{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "lib": ["DOM", "ES2018"]
  },
  "include": [
    "bin/**/*",
    "src/**/*",
    "test/**/*",
    "vitest.config.mts",
    "env.d.ts"
  ],
  "exclude": ["test/restDocs/results"]
}
